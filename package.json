{
  "name": "web-miraibase",
  "version": "1.0.0",
  "description": "MIRAI BASE Website",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.10.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-html": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "moment": "^2.23.0",
    "node-mandrill": "^1.0.1",
    "parcel-bundler": "^1.6.2",
    "parcel-plugin-imagemin": "^1.0.2",
    "pug": "^2.0.3",
    "sass": "^1.15.2",
    "sweet-scroll": "^3.0.0",
    "vue": "^2.5.16"
  },
  "scripts": {
    "dev": "parcel src/index.pug --open",
    "build": "npm run lint; rm -R build; parcel build src/index.pug --public-url ./ -d build; cp src/images/err.jpg build/err.jpg; cp src/images/ogimage.png build/ogimage.png",
    "github-build": "parcel build src/index.pug --public-url ./ -d docs",
    "lint": "eslint src/",
    "deploy": "npm run build; node deploy.js",
    "fmt": "yarn prettier --write src/**/*.js src/**/*.pug"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^1.0.3",
    "dotenv": "^8.1.0",
    "ftp-deploy": "^2.3.3",
    "git-rev-sync": "^1.12.0",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "singleQuote": true,
    "useTabs": false,
    "tabWidth": 2,
    "semi": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
